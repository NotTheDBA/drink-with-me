<div class="card">
    <div class="table-responsive">
        <div class="table border">
            <div class="scroll">
                <table class="table-striped">
                    <thead>
                        <tr>
                            <th scope="col" id="drink">Drink</th>
                            <th scope="col" id="location">Where</th>
                            <th scope="col" id="my-rating">My Rating</th>
                            <th scope="col" id="avg-rating">Avg Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each drinks}}
                        <tr>
                            <th scope="row"> ({{drinksName}})</th>
                            <td> ({{drinksLocation}})</td>
                            <td>
                                <div class="rating">
                                    ({{drinksMyRating}})
                                </div>
                            </td>
                            <td>
                                <div class="rating">
                                    ({{drinksAvgRating}})
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>