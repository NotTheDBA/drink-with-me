<div class="card">
    <div class="table-responsive">
        <div class="table border">
            <div class="scroll card">
                <table class="table-striped">
                    <thead>
                        <tr>
                            <th class="tf" scope="col"></th>
                            <th class="tf" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each friends}}
                        <tr>
                            <td scope="col">
                                <img src="https://www.gravatar.com/avatar/{{gravatar}}?d=wavatar" class="friend-image"> {{firstname}} {{lastname}}
                            </td>
                            <td scope="col">
                                <form class="form-horizontal" method="GET" action="/friends/{{id}}">
                                    <input type="submit" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true" value="View">
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>