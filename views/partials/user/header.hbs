<div class="card w-100">
    <div class="card-body">
        <div id="search-group">
            {{>headers/search}}
        </div>
        <h6 class="card-title" id="user-name">{{user.firstname}} {{user.lastname}}</h6>
        {{#if isMe}}
        <img src="https://www.gravatar.com/avatar/{{user.gravatar}}?d=https://www.publicdomainpictures.net/pictures/130000/nahled/seamless-cocktails.jpg"
            class="profile-image"> {{/if}} {{#if isFriend}}
        <img src="https://www.gravatar.com/avatar/{{user.gravatar}}?d=wavatar" class="profile-image"> {{/if}}

        <div class="link-box">
            <div class="link-text">
                {{#unless isMe}}
                <a href="/dashboard">Profile</a>{{/unless}} {{#if isMe}}
                <a href="">{{user.firstname}} {{user.lastname}}</a>{{/if}}
                <br/>
                <a href="/review">Drinks</a>
                <br/>
                <a href="/friends">Friends</a>
            </div>
        </div>


        <div class="row">

        </div>
    </div>
</div>